@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    Clinics
                </div>
                <div class="col-sm">
                    <select id="slt-clinic" onchange="populateUsers()">
                        <option value="0" disabled selected>--Select one--</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <table class="grid-holder" id="patients-table">
                    <thead class="grid-header">
                        <tr>
                            <th>Id</th>
                            <th>Clinic Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Date Of Birth</th>
                        </tr>
                    </thead>
                    <tbody class="grid-body" id="patient-list">
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>